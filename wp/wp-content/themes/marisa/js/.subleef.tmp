    var BannerCarrossel = function BannerCarrossel($el) { 
        this.buildElements($el); 
    }; //CONSTRUCTOR

    BannerCarrossel.prototype.buildElements = function($el) {
        var totalWidth = 0;
        if($el.length) {
            $('#banner ul li').each(function( index ) {
                var bg = $(this).data('bg');
                var fg = $(this).data('fg');
                var link = $(this).data('link'); 
                if(link.indexOf('http')<1) { link = "http://"+link; }
                var target_window = $(this).data('window');
                $(this).parent().parent().parent().css( "background-image", "url('"+bg+"')" );
                $(this).append('<a href="'+link+'" class="headerFg"></a>');
                $(this).find('a').css( "background-image", "url('"+fg+"')" );
                if ( target_window == 1 ) { $(this).find('a').attr('target','_blank'); }
                //WIDTH OF UL ELEMENT
                totalWidth += parseInt($(this).width(), 10);
            });
            $('#banner ul').css('width', totalWidth+'px');
            $('#banner').attr('data-count', '0');
        }
    };

    BannerCarrossel.prototype.next = function($el) {
        console.log(this);
        var aux = $el.data('count') + 1;
        $el.attr('data-count', aux);
    };

    BannerCarrossel.prototype.previous = function($el) {
        var aux = $el.data('count') - 1;
        $el.attr('data-count', aux);
    };

